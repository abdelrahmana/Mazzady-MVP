<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.card.MaterialCardView
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:strokeWidth="1dp"
        android:layout_marginTop="@dimen/_10sdp"
        android:id="@+id/optionsMaterial"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp"
        app:strokeColor="@color/gray"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:minHeight="50dp"
            android:id="@+id/constrainSubCategory"
            android:layout_height="match_parent">
            <TextView
                app:layout_constraintEnd_toStartOf="@+id/arrowSubCategory"
                android:id="@+id/valueOption"
                android:layout_marginStart="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <ImageView
                app:srcCompat="@drawable/ic_arrow_down"
                android:layout_marginEnd="10dp"
                android:id="@+id/arrowSubCategory"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
    <TextView
        android:paddingStart="3dp"
        android:paddingEnd="3dp"
        android:layout_marginStart="@dimen/_10sdp"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/optionsMaterial"
        app:layout_constraintTop_toTopOf="@+id/optionsMaterial"
        android:id="@+id/headerSOption"
        android:text="@string/subcategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.google.android.material.card.MaterialCardView
        app:layout_constraintTop_toBottomOf="@+id/optionsMaterial"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:id="@+id/cardOther"
        app:cardCornerRadius="5dp"
        app:strokeWidth="1dp"
        app:cardElevation="0dp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        app:strokeColor="@color/gray"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        android:minHeight="50dp"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/otherEditTex"
            android:background="@null"
            android:layout_gravity="center"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:gravity="center_vertical"
            android:text= "others"
            android:hint="write other"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </com.google.android.material.card.MaterialCardView>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/nestedOptionsChild"
        app:layout_constraintTop_toBottomOf="@+id/cardOther"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>
